{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "API сервер для управления логистикой",
        "title": "TechLogist API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/auth/login": {
            "post": {
                "description": "Авторизация пользователя по логину и паролю",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Авторизация",
                "parameters": [
                    {
                        "description": "Данные для авторизации",
                        "name": "loginRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Токен доступа",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "401": {
                        "description": "Ошибка авторизации",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "description": "Удаляет HttpOnly cookie с токеном доступа и завершает сессию пользователя",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Выход из аккаунта",
                "responses": {
                    "200": {
                        "description": "Выход выполнен успешно",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Ошибка сервера",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "description": "Регистрация нового пользователя",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Регистрация",
                "parameters": [
                    {
                        "description": "Данные для регистрации",
                        "name": "registerRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.RegisterRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Пользователь успешно создан",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/orders": {
            "post": {
                "description": "Создаёт новую заявку",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Создать заявку",
                "parameters": [
                    {
                        "description": "Данные заявки",
                        "name": "order",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.OrderCreate"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Заказ создан",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка валидации",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/orders/actual": {
            "get": {
                "description": "Получить все актуальные заявки",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Получить все актуальные заявки",
                "responses": {
                    "200": {
                        "description": "Список заявок",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.OrderOut"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/orders/{id}/accept": {
            "post": {
                "description": "Принять заявку по ID",
                "tags": [
                    "orders"
                ],
                "summary": "Принять заявку",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID заявки",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Заказ принят",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/orders/{id}/cancel": {
            "post": {
                "description": "Отменяет заявку по ID",
                "tags": [
                    "orders"
                ],
                "summary": "Отменить заявку",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID заявки",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Заказ отменён",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/orders/{id}/complete": {
            "post": {
                "description": "Завершает заявку по ID",
                "tags": [
                    "orders"
                ],
                "summary": "Завершить заявку",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID заявки",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Заказ завершён",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/orders/{id}/reject": {
            "post": {
                "description": "Снять заявку с водителя по ID",
                "tags": [
                    "orders"
                ],
                "summary": "Снять заявку с водителя",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID заявки",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Заказ снят",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/secure/check": {
            "get": {
                "description": "Проверка актуальности авторизации перед доступом к защищённым страницам",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "checks"
                ],
                "summary": "Проверка авторизации",
                "responses": {
                    "200": {
                        "description": "Токен валиден",
                        "schema": {
                            "$ref": "#/definitions/model.CheckResponse"
                        }
                    },
                    "401": {
                        "description": "Ошибка авторизации",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "description": "Получить пользователя по ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "users"
                ],
                "summary": "Получить пользователя",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID пользователя",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Пользователь",
                        "schema": {
                            "$ref": "#/definitions/model.User"
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "put": {
                "description": "Обновить пользователя по ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "users"
                ],
                "summary": "Обновить пользователя",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID пользователя",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Данные пользователя для обновления",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.UserUpdate"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Пользователь успешно обновлён",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "Ошибка валидации",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "model.CheckResponse": {
            "description": "DTO для передачи роли на фронт",
            "type": "object",
            "properties": {
                "role": {
                    "description": "Role текущего пользователя",
                    "enum": [
                        "driver",
                        "disp",
                        "admin",
                        "mainAdmin"
                    ],
                    "allOf": [
                        {
                            "$ref": "#/definitions/model.RoleStatic"
                        }
                    ]
                }
            }
        },
        "model.LoginRequest": {
            "description": "DTO для передачи данных авторизации",
            "type": "object",
            "properties": {
                "login": {
                    "type": "string",
                    "example": "user123"
                },
                "password": {
                    "type": "string",
                    "example": "qwerty123"
                }
            }
        },
        "model.OrderCreate": {
            "description": "DTO для создания заявки",
            "type": "object",
            "properties": {
                "cargo_description": {
                    "type": "string"
                },
                "cargo_name": {
                    "type": "string"
                },
                "cargo_type_id": {
                    "type": "integer"
                },
                "cargo_weight": {
                    "type": "number"
                },
                "depart_loc": {
                    "type": "integer"
                },
                "goal_loc": {
                    "type": "integer"
                },
                "photo_id": {
                    "type": "string"
                }
            }
        },
        "model.OrderOut": {
            "description": "DTO для передачи информации о заявке",
            "type": "object",
            "properties": {
                "cargo_description": {
                    "type": "string"
                },
                "cargo_name": {
                    "type": "string"
                },
                "cargo_type_id": {
                    "type": "integer"
                },
                "cargo_weight": {
                    "type": "number"
                },
                "depart_loc": {
                    "type": "integer"
                },
                "dispatcher_id": {
                    "type": "integer"
                },
                "driver_id": {
                    "type": "integer"
                },
                "goal_loc": {
                    "type": "integer"
                },
                "id": {
                    "type": "integer"
                },
                "order_status_id": {
                    "type": "integer"
                },
                "photo_id": {
                    "type": "string"
                },
                "time": {
                    "type": "string"
                }
            }
        },
        "model.RegisterRequest": {
            "description": "DTO для передачи данных регистрации",
            "type": "object",
            "properties": {
                "fio": {
                    "type": "string",
                    "example": "Иванов Иван Иванович"
                },
                "login": {
                    "type": "string",
                    "example": "user123"
                },
                "password": {
                    "type": "string",
                    "example": "qwerty123"
                },
                "phone": {
                    "type": "string",
                    "example": "+79998887766"
                },
                "role_id": {
                    "type": "string",
                    "example": "uuid-role-id"
                }
            }
        },
        "model.RoleStatic": {
            "type": "string",
            "enum": [
                "driver",
                "disp",
                "admin",
                "mainAdmin"
            ],
            "x-enum-varnames": [
                "DRIVER",
                "DISP",
                "ADMIN",
                "MAIN_ADMIN"
            ]
        },
        "model.User": {
            "description": "Модель пользователя",
            "type": "object",
            "properties": {
                "fio": {
                    "type": "string"
                },
                "is_denied": {
                    "type": "boolean"
                },
                "login": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                },
                "public_id": {
                    "type": "string"
                }
            }
        },
        "model.UserUpdate": {
            "description": "DTO для обновления информации о пользователе",
            "type": "object",
            "properties": {
                "fio": {
                    "type": "string"
                },
                "login": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                }
            }
        }
    }
}